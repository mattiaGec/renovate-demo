{
  "extends": ["config:best-practices"],
  "includePaths": [
    "package.json"
  ],
  "baseBranches": ["main"],
  "prCreation": "immediate",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 20,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "date-fns",
      "matchPackageNames": [
        "date-fns"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "lodash",
      "matchPackageNames": [
        "lodash"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "redux - minor ",
      "matchPackageNames": [
        "redux"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "enabled": true
    },
    {
      "groupName": "redux - major",
      "matchPackageNames": [
        "redux"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "timezone": "Europe/Zurich",
  "automerge": false,
  "labels": [
    "renovate"
  ]
}
