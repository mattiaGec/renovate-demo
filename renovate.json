{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "includePaths": [
    "package.json"
  ],
  "prCreation": "immediate",
  "rangeStrategy": "bump",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 8,
  "packageRules": [
    {
      "groupName": "MUIX",
      "matchPackageNames": [
        "@mui/x-*"
      ]
    },
    {
      "groupName": "MUI",
      "matchPackageNames": [
        "@mui/icons-material",
        "@mui/material"
      ]
    },
    {
      "groupName": "emotion",
      "matchPackageNames": [
        "@emotion/*"
      ]
    },
    {
      "groupName": "dnd-kit",
      "matchPackageNames": [
        "@dnd-kit/*"
      ]
    },
    {
      "groupName": "vitest",
      "matchPackageNames": [
        "vitest",
        "@vitest/*"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "devDependencies non-major"
    }
  ],
  "timezone": "Europe/Zurich",
  "schedule": ["after 16:25 and before 16:30 every day"],
  "automerge": true,
  "labels": [
    "renovate"
  ]
}
