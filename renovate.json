{
  "extends": ["config:best-practices"],
  "includePaths": [
    "package.json"
  ],
  "prCreation": "immediate",
  "rangeStrategy": "bump",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 8,
  "packageRules": [
    {
      "groupName": "date-fns",
      "matchPackageNames": [
        "date-fns"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "lodash",
      "matchPackageNames": [
        "lodash"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ],
  "timezone": "Europe/Zurich",
  "automerge": true,
  "labels": [
    "renovate"
  ]
}
